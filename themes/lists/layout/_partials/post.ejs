<article class="post" data-post-id="<%= post._id %>">
  <%- partial('post-header', {post: post, isIndex: false}) %>
  <section class="post-content">
    <%- post.content %>
  </section>
  <footer class="post-footer">
    <% if (isPage) { %>
      <section class="post-nav">
        <a href="<%= config.root %>">&larr; return</a>
      </section>
    <% } else { %>
      <%- partial('post-date', {date_format: config.date_format}) %>
      <%- partial('post-tag-list') %>
      <% if (post.prev) { %>
      <section class="post-nav">
        <a href="<%= url_for(post.prev.path) %>" class="post-nav-prev" id="prev"><%= post.prev.title %></a>
      </section>
      <% } %>
      <% if (post.next) { %>
      <section class="post-nav">
        <a href="<%= url_for(post.next.path) %>" class="post-nav-next" id="next"><%= post.next.title %></a>
      </section>
      <% } %>
    <% } %>
  </footer>
</article>

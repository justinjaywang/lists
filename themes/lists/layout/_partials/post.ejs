<article class="post" data-post-id="<%= post._id %>">
  <%- partial('post-header', {post: post, isIndex: false}) %>
  <br>
  <section class="post-content">
    <%- post.content %>
  </section>
  <footer class="post-footer">
    <%- partial('post-date', {date_format: config.date_format}) %>
    <%- partial('post-tag-list') %>
    <% if (post.next) { %>
    <section class="post-next">
      <a href="<%= url_for(post.next.path) %>" class="post-next-link"><%= post.next.title %></a>
    </section>
    <% } %>
  </footer>
</article>
